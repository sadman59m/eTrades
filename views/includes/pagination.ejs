<section class="pagination">
  <% if(currentPage > 1) { %>
  <a href="?page=1">1</a>
  <% } %> <% if(hasPreviousPage && previousPage > 1) { %>
  <a href="?page=<%= previousPage %>"><%= previousPage %></a>
  <% } %> <% if(currentPage === lastPage && hasPreviousPage) { %>
  <a class="active" href="?page=<%= lastPage %>"> < <%= lastPage%></a>
  <% } else if(currentPage === 1 && hasNextPage) { %>
  <a class="active" href="?page=<%= lastPage %>"> 1 > </a>
  <% } else if(hasPreviousPage && hasNextPage) { %>
  <a class="active" href="?page=<%= currentPage %>"> < <%= currentPage %> > </a>
  <% } else { %>
  <a class="active" href="?page=<%= currentPage %>"><%= currentPage %></a>
  <% } %> <% if(hasNextPage && nextPage < lastPage) { %>
  <a href="?page=<%= nextPage %>"><%= nextPage %></a>
  <% } %> <% if(currentPage < lastPage) { %>
  <a href="?page=<%= lastPage %>"><%= lastPage%></a>
  <% } %>
</section>
